<h3>Books</h3>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    </tr>
  </thead>
  
  <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book.id) %></td>
            <td><%= link_to "edit", edit_book_path(book) %></td>
            <td><%= link_to "destroy", book_path(book.id), method: :delete %></td>
        </tr>
        <% end %>
 </tbody>
</table>


<h3 class="sign-up">New book</h3>
    
<%= form_with(model: @book,local:true) do |f| %>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:<br>
   <% @book.errors.full_messages.each do |msg| %>
    <%= msg %><br>
   <% end %>
  <% end %>
 <div class="sign-up-text">
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <br><%= f.submit 'Create Book' %></br>

 </div>
<% end %>